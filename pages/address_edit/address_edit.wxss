/* pages/address_edit/address_edit.wxss */
page{
  background: #f1f1f1;
}
.edit_item{
  display: flex;
  align-items: center;
  height: 80rpx; 
  line-height: 80rpx;
  background: #fff;
  border-bottom: 1px solid #f1f1f1;
  overflow: hidden;
}

.last{ 
  height: 140rpx;
  border-bottom: none;
}
.edit_label{ 
  width: 180rpx;
  float: left;
  font-size: 28rpx; 
  color: rgba(54, 13, 13, 0.685);
}
.edit_content{
  flex: 1;
  float: left;
  font-size: 28rpx; 
  overflow: hidden;
}
.edit_wrapper{
  padding: 20rpx;
  background: #fff;
  margin-bottom: 40rpx;
}
.ps_btn{
  width: 90%;
  margin-left: 5%;
  border-radius: 6rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  margin-top: 30rpx;
  font-size: 28rpx;
  background: #fff;
}
.ps_btn:active{
  opacity: 0.8;
}
.red{
  color: #fff;
  background: red;
} 
.set_default{
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  left: 0;
  bottom: 0rpx;
  margin: 0 0;
  background: red;
  color: #fff;
}
.set_default image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.ps_textarea{ 
  height: 140rpx;
  padding-left: 8rpx;
  padding-top: 20rpx;
  box-sizing: border-box; 
  margin: 0 0; 
  margin-top: 8rpx;
  margin-left: -8rpx;
}
