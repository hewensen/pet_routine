/* pages/order_detail/order_detail.wxss */

page {
  background: #f1f1f1;
}

.order_item {
  background: #fff;
  padding: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.order_title {
  font-size: 24rpx;
  overflow: hidden;
}

.order_no {
  color: #777;
  float: left;
}

.order_status {
  color: red;
  float: right;
}

.order_content {
  display: flex;
  background: #fcf7f7;
  font-size: 23rpx;
  padding: 16rpx;
  overflow: hidden;
  margin-top: 10rpx;
}

.order_pic {
  width: 140rpx;
  height: 140rpx;
  border-radius: 6rpx;
  float: left;
  margin-right: 16rpx;
}

.order_desc {
  float: left;
  flex: 1;
}

.order_good {
  color: #000;
}

.order_detail {
  overflow: hidden;
  margin-top: 10rpx;
}

.order_price {
  color: red;
  font-weight: bold;
  float: left;
}

.goods_no {
  float: right;
  color: #777;
}

.good_asum {
  text-align: right;
  font-size: 25rpx;
  margin-top: 10rpx;
  color: #777;
}

.price {
  font-size: 24rpx;
  color: red;
  font-weight: bold;
}

.order_status {
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  color: red;
  font-size: 24rpx;
  border: 1px solid red;
  margin-top: 30rpx;
}

.order_deitem {
  background: #fff;
  padding: 20rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.de_tt {
  float: left;
  font-size: 26rpx;
}

.de_desc {
  float: right;
  font-size: 22rpx;
}

.assum, .assum_tt {
  margin-bottom: 0;
  font-size: 22rpx;
}

.pay_way {
  margin-top: 8rpx;
}

.pay_info {
  padding: 20rpx;
  font-size: 24rpx;
  text-align: right;
  background: #fff;
}

.wechat {
  width: 36rpx;
  height: 36rpx;
  float: right;
  margin-right: 10rpx;
}

.money {
  color: red;
  font-weight: bold;
}
.orderno_detail{
  background: #fff;
  padding: 20rpx;
  font-size: 22rpx;
  color: #777;
  margin-top: 20rpx;
}
.orderno_item{
  margin-top: 6rpx;
}
