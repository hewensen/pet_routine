/**index.wxss**/

page {
  height: 100%;
  background: #f1f1f1;
  overflow: auto;
}

.close_pic {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  bottom: 30rpx;
  left: calc(50% - 40rpx);
}

.notice_pic {
  position: absolute;
  left: 24rpx;
  top: 14rpx;
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

.main_banner {
  width: 100%;
  height: 300rpx;
}

.notice {
  position: relative;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background: pink;
  color: #fff;
  font-size: 26rpx;
  margin: 0 0;
  padding-left: 66rpx;
  box-sizing: border-box;
}

.banner_img {
  width: 100%;
  height: 100%;
}

.swiper {
  height: 360rpx;
}

.menu_wrapper {
  display: flex;
  flex-wrap: wrap;
  background: #fff;
}

.menu_item {
  width: calc(100% / 3);
  height: 170rpx;
  font-size: 24rpx;
  text-align: center;
  padding-top: 30rpx;
  color: #777;
}

.circle_wrapper {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  border-radius: 50%;
  margin-bottom: 6rpx;
}

.circle_blue {
  background: lightskyblue;
}

.circle_pink {
  background: pink;
}

.circle_green {
  background: greenyellow;
}

.circle_yellow {
  background: lightseagreen;
}

.circle_greey {
  background: lightcoral;
}

.circle_purple {
  background: lightgreen;
}

.menu_img {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
}

.news_title {
  font-size: 24rpx;
  color: #777;
  background: #fff;
  margin-top: 10rpx;
  padding: 10rpx;
}

.news_item {
  display: flex;
  height: 200rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f1f1f1;
}

.news_img {
  width: 180rpx;
  height: 180rpx;
  float: left;
  margin: 20rpx;
  border-radius: 50%;
}

.news_content {
  flex: 1;
  float: left;
  margin: 20rpx;
}

.news_content_tt {
  color: #000;
  font-size: 30rpx;
}

.news_time {
  font-size: 24rpx;
  margin-top: 4rpx;
}

.news_content_desc {
  width: 440rpx;
  height: 60rpx;
  overflow: hidden;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.tip_wraper {
  position: fixed;
  width: 100%; 
  height: 100%;
  bottom: -100%;
  border-radius: 30rpx;
  background: rgba(0, 0, 0, 0.9);
}

.tip_addtime {
  font-size: 24rpx;
  color: #fff;
}

.tip_header {
  text-align: center;
  border-bottom: 1px solid #fff;
  padding: 16rpx;
}

.tip_pic {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.tip_title {
  color: #fff;
  text-align: center;
  font-size: 37rpx;
  margin-top: 10rpx;
}

.tip_content {
  text-align: left;
  font-size: 30rpx;
  padding: 30rpx;
  color: #fff;
  line-height: 50rpx;
}
