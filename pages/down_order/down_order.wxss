/* pages/down_order/down_order.wxss */

page {
  background: #f1f1f1;
  box-sizing: border-box;
}

.content {
  padding: 16rpx;
}

.address_info {
  position: relative;
  padding: 20rpx 80rpx;
  background: #fff;
  border-radius: 20rpx;
}

.cover {
  position: fixed;
  z-index: 8;
  width: 100%;
  left: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0);
}

.chose {
  background: #fff;
}

.address_wrapper {
  position: fixed;
  width: 70%;
  left: 15%;
  top: 15%;
  bottom: 35%;
  overflow: auto;
  z-index: 9;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
}

.user_info {
  display: flex;
  justify-content: space-between;
}

.user_info {
  font-size: 25rpx;
  color: #000;
  font-weight: bold;
}

.address_detail {
  font-size: 23rpx;
  color: #777;
  margin-top: 10rpx;
}

.right_icon {
  position: absolute;
  right: 40rpx;
  top: 46rpx;
  width: 26rpx;
  height: 26rpx;
}

.loc_icon {
  position: absolute;
  left: 36rpx;
  width: 36rpx;
  height: 36rpx;
  top: 36rpx;
}

.user_left {
  float: left;
}

.order_content {
  display: flex;
  font-size: 23rpx;
  padding: 20rpx;
  overflow: hidden;
  background: #fff;
  margin-top: 10rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.order_pic {
  width: 140rpx;
  height: 140rpx;
  border-radius: 6rpx;
  float: left;
  margin-right: 16rpx;
}

.order_desc {
  float: left;
  flex: 1;
}

.order_good {
  color: #000;
}

.order_detail {
  overflow: hidden;
  margin-top: 10rpx;
}

.order_price {
  color: red;
  font-weight: bold;
  float: left;
}

.goods_no {
  float: right;
  color: #777;
}

.func_item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  background: #fff;
  padding: 20rpx;
  overflow: hidden;
}

.dele_input {
  width: 150rpx;
  float: right;
  text-align: right;
}

.func_inner {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  justify-content: space-between;
  border-bottom: 1px solid #f1f1f1;
}

.sep_line {
  justify-content: space-between;
}

.dele {
  padding: 0 20rpx;
}

.word {
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.word_tt {
  float: left;
}

.word_input {
  width: 78%;
  float: left;
  margin-left: 40rpx;
  padding-top: 4rpx;
}

.assum_wrapper {
  background: #fff;
  margin-top: 10rpx;
  padding: 30rpx;
  border-radius: 20rpx;
}

.assum_inner {
  border-bottom: 1px solid #f1f1f1;
  font-size: 22rpx;
}

.inner_item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.assum {
  text-align: right;
  font-size: 22rpx;
  margin-top: 20rpx;
}

.money {
  color: red;
  font-size: 24rpx;
}

.ensure_wrapper {
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  background: #fff;
  text-align: right;
  font-size: 24rpx;
}

.ensure_price {
  line-height: 80rpx;
  float: right;
  margin-right: 20rpx;
}

.ensure_btn {
  width: 140rpx;
  padding: 24rpx 50rpx;
  font-size: 26rpx;
  color: #fff;
  background: red;
  text-align: center;
  float: right;
}

.money_bold {
  font-weight: bold;
  color: red;
  font-size: 24rpx;
}

.chose_item {
  position: relative;
  padding: 28rpx;
  border-radius: 20rpx;
  border: 2px solid #999;
  margin-bottom: 20rpx;
}

.chose_add {
  font-size: 26rpx;
  font-weight: bold;
}

.chose_detail {
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #999;
}

.chose_phone {
  margin-left: 50rpx;
}

.check_pic {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 10rpx;
  top: 40rpx;
}

.active {
  border: 2px solid #d81e06;
}

.pay_wrapper {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 24rpx;
  background: #f1f1f1;
  color: green;
  z-index: 9;
  bottom: -80rpx;
}

.done_wrapper {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 80rpx;
  background: #000;
  z-index: 7;
}
