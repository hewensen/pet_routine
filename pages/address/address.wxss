/* pages/address/address.wxss */

page {
  background: #f1f1f1;
}
.noorder_wrapper {
  text-align: center;
  padding-top: 160rpx;
  font-size: 28rpx;
  color: #707070;
}

.default_pic{ 
  position: absolute;
  z-index: 0;
  top: 0;
  right: 0;
  width: 100rpx;
  height: 100rpx;
}

.noorder_pic {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}
.header {
  display: flex;
  align-items: center;
  background: #fff;
  font-size: 28rpx;
  color: #777;
  padding: 20rpx;
  height: 60rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.tip {
  float: left;
}

.wechat {
  width: 36rpx;
  height: 36rpx;
  float: left;
  margin-right: 10rpx;
}

.right {
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  right: 30rpx;
}

.address_item {
  position: relative;
  background: #fff;
  padding: 30rpx;
}

.address_basic {
  color: #000;
  font-weight: bold;
  font-size: 28rpx;
}

.address_detail {
  color: #777;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.address_edit {
  position: absolute;
  z-index: 1;
  width: 60rpx;
  height: 60rpx;
  right: 30rpx;
  top: 44rpx;
}

.address_edit image {
  width: 34rpx;
  height: 34rpx;
}

.add_btn{
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #fff;
  background: red;
  text-align: center;
}
.add_btn:active{
  opacity: 0.8;
}
