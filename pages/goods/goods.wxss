/* pages/goods/goods.wxss */
page{
  background: #f1f1f1;
}
.goods_header {
  position: relative;
  height: 360rpx;
}

.back_pic {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 360rpx;
  left: 0;
  top: 0;
  bottom: 0;
}
.cover{
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 360rpx;
  background: rgba(0, 0, 0, 0.3);
}

.goods_tpic {
  width: 120rpx;
  height: 120rpx;
  float: left;
}

.goods_content {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  color: #fff;
  font-size: 24rpx;
  z-index: 2;
}
.goods_info{
  float: left;
  margin-left: 20rpx;
  margin-top: 70rpx;
}
.sep{
  margin: 0 16rpx;
}
.good_tt{
  margin-right: 6rpx;
}
.search_icon{
  width: 36rpx;
  height: 36rpx;
  float: left; 
  margin-left: 10rpx;
}
.saercher_wrapper{
  display: flex;
  align-items: center;
  width: 90%;
  padding: 10rpx;
  margin: 20rpx 5%;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 40rpx;
  background: #fff;
  font-size: 24rpx; 
}
.search_input{
  width: 80%;
  text-align: left;
  padding-left: 10rpx;
}
