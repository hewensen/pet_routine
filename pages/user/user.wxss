/* pages/user/user.wxss */

page {
  background: #f1f1f1;
}
.menu_left{
  width: 28rpx;
  height: 28rpx;
  float: left;
  margin-right: 10rpx;
  margin-top: 6rpx;
}

.userinfo_wrapper {
  height: 220rpx;
  background: lightcoral;
  text-align: center;
  padding-top: 80rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.nickname {
  color: #fff;
}

.menu_pic {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.menu_wrapper {
  background: #fff;
  margin-top: 15rpx;
  margin-bottom: 14rpx;
}

.menu_all {
  font-size: 28rpx;
  color: #777;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f1f1f1;
}

.menu_list {
  display: flex;
}

.menu_item {
  flex: 1;
  color: #707070;
  padding: 20rpx 0;
  font-size: 24rpx;
  text-align: center;
}

.func_item {
  padding: 10rpx;
  width: 100%;
  font-size: 26rpx;
  color: #777;
  background: #fff;
}

.func_pic {
  width: 44rpx;
  height: 44rpx;
  float: left;
  margin: 23rpx;
  margin-right: 18rpx;
}

.func_inner {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #f1f1f1;
}
.last{
  border-bottom: none;
}
.func_right{
  width: 30rpx;
  height: 30rpx;
  float: right;
  margin: 28rpx 36rpx;
}
.menu_right{
  width: 30rpx;
  height: 30rpx;
  float: right;
  margin: 6rpx;
}

.auth_btn{
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: lightcoral;
  border-radius: 10rpx;
  margin: 20rpx auto;
  font-size: 26rpx;
}
